{{#main-layout as |container|}}
{{#container.centerContent class="song-details-main"}}
    {{link-to 'Back to list' 'songs' class="back-link"}}
    <div class="row song-title-bar">
      <span class="col-md-8">
        <h1>{{song.name}}</h1>
        <h2>{{song.artist.name}}</h2>
      </span>
      <span class="col-md-3 pull-right rating-bar">
        {{likes-meter item=song currentRating=song.hearts maxRating=3 update=(action 'setRating')}}
      </span>
    </div>
    <div class="song-details-container">
      <div class="row">
        <p class="col-md-6">Duration</p>
        <p class="col-md-6 align-right">{{format-song-duration song.duration songs.globalSettings.timeFormat}}</p>
      </div>
      <hr />
      <div class="row">
        <p class="col-md-6">Genre</p>
        <p class="col-md-6 align-right">{{song.genre}}</p>
      </div>
      <hr />
      {{#hidden-details title='Album' }}
        <div class="row">
          <p class="col-md-6">Name</p>
          <p class="col-md-6 align-right">{{song.album.name}}</p>
        </div>
        <div class="row">
          <p class="col-md-6">Year</p>
          <p class="col-md-6 align-right">{{song.album.year}}</p>
        </div>
        <div class="row">
          <p class="col-md-6">Genre</p>
          <p class="col-md-6 align-right">{{song.album.genre}}</p>
        </div>
      {{/hidden-details}}
    </div>
  {{/container.centerContent}}

  {{#container.sideContent}}
    {{table-filter isReadOnly=true title=(concat 'Other songs by ' song.artist.name) values=otherSongNames}}
  {{/container.sideContent}}
{{/main-layout}}
